#
# common targets that are required at all levels of make.
#



# any target that lists this as a dependency will _always_ be remade.
forcemake:


# Makes sure that a bin directory exists.
makebindir :
	@if test ! -d $(BINDIR) ; \
	then \
	  echo ; \
	  echo "creating "$(BINDIR)" directory" ; \
	  mkdir $(BINDIR) ; \
	  echo ; \
	fi

